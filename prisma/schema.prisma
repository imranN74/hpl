generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  AUCTIONEER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String?
  role      UserRole
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Owner {
  id            String   @id @default(uuid())
  ownerName     String
  ownerEmail    String   @unique
  ownerPhone    String?
  ownerPassword String
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  team          Team[]
}

model Team {
  id        String   @id @default(uuid())
  teamName  String
  ownerId   String
  teamImage String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     Owner    @relation(fields: [ownerId], references: [id])
  players   Player[]
}

model Season {
  id           String   @id @default(uuid())
  seasonName   String?
  year         String
  seasonNumber Int
  startDate    DateTime
  endDate      DateTime
  auctionDate  DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive     Boolean  @default(true)
  players      Player[]
}

model Player {
  id            String   @id @default(uuid())
  name          String
  fatherName    String
  phone         String
  age           Int
  role          String
  battingStyle  String?
  bowlingStyle  String?
  panchayat     String
  address       String
  photoUrl      String?
  seasonId      String
  teamId        String?
  price         Int?
  approved      Boolean  @default(false)
  termsAccepted Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isActive      Boolean  @default(true)
  team          Team?    @relation(fields: [teamId], references: [id])
  season        Season   @relation(fields: [seasonId], references: [id])
}
